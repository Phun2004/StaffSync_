@model DashboardVM
@{
    ViewBag.Title = "StaffSync | Dashboard";
}

<h1>StaffSync | MainPage</h1>

<!-- Dashboard Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-0">@Model.TotalEmployees</h3>
                    <p class="mb-0">Total Employees</p>
                </div>
                <i class="fas fa-users fa-2x"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-0">@Model.TotalDepartments</h3>
                    <p class="mb-0">Departments</p>
                </div>
                <i class="fas fa-building fa-2x"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-0">@Model.ActiveProjects</h3>
                    <p class="mb-0">Active Projects</p>
                </div>
                <i class="fas fa-project-diagram fa-2x"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-0">@Model.TotalAdmins</h3>
                    <p class="mb-0">Total Admins</p>
                </div>
                <i class="fas fa-user-shield fa-2x"></i>
            </div>
        </div>
    </div>
</div>

<!-- Recent Employees and Super Admin Actions -->
<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-users me-2"></i>Recent Employees
                </h5>
            </div>
            <div class="card-body">
                @if (Model.RecentEmployees != null && Model.RecentEmployees.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Department</th>
                                    <th>Position</th>
                                    <th>Phone</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var employee in Model.RecentEmployees)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(employee.Picture))
                                                {
                                                    <img src="@employee.Picture" alt="Profile"
                                                         class="rounded-circle me-2"
                                                         style="width: 32px; height: 32px; object-fit: cover;" />
                                                }
                                                else
                                                {
                                                    <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-2"
                                                         style="width: 32px; height: 32px;">
                                                        <span class="text-white fw-bold">@employee.Name.Substring(0, 1).ToUpper()</span>
                                                    </div>
                                                }
                                                @employee.Name
                                            </div>
                                        </td>
                                        <td>
                                            @if (employee.Department != null)
                                            {
                                                @employee.Department.Name
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not assigned</span>
                                            }
                                        </td>
                                        <td>
                                            @if (employee.Position != null)
                                            {
                                                @employee.Position.Name
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not assigned</span>
                                            }
                                        </td>
                                        <td>@employee.Phone</td>
                                        <td>
                                            <span class="badge bg-success">Active</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="text-center mt-3">
                        <a asp-controller="Employee" asp-action="Index" class="btn btn-primary">
                            <i class="fas fa-eye me-1"></i>View All Employees
                        </a>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-users fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No employees found</p>
                        <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>Add First Employee
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-crown me-2"></i>Super Admin Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-user-plus me-2"></i>Add New Employee
                    </a>
                    <a asp-controller="Department" asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Create Department
                    </a>
                    <a asp-controller="Project" asp-action="Create" class="btn btn-info">
                        <i class="fas fa-briefcase me-2"></i>Start New Project
                    </a>
                    <a asp-controller="Admin" asp-action="Index" class="btn btn-warning">
                        <i class="fas fa-users-cog me-2"></i>Manage Admins
                    </a>
                    <a asp-controller="Attendance" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-clock me-2"></i>View All Attendance
                    </a>
                </div>
            </div>
        </div>

        <!-- System Status Card -->
        <div class="card mt-3">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-chart-line me-2"></i>System Status
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-12 mb-2">
                        <div class="d-flex justify-content-between">
                            <span>System Health</span>
                            <span class="badge bg-success">Excellent</span>
                        </div>
                    </div>
                    <div class="col-12 mb-2">
                        <div class="d-flex justify-content-between">
                            <span>Last Backup</span>
                            <span class="text-muted">Aug 07, 2025</span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="d-flex justify-content-between">
                            <span>Active Users</span>
                            <span class="text-info">1 Online</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>