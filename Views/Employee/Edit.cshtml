@model Demo.Models.EmployeeVM
@{
    ViewBag.Title = "StaffSync | Edit Employee";
    var departments = ViewBag.Departments as IEnumerable<Demo.Models.Department>;
    var positions = ViewBag.Positions as IEnumerable<Demo.Models.Position>;
}

<h1>Edit Employee (@Model.Id)</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="form mb-4">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" autofocus />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Phone" class="form-label">Phone</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="DepartmentId" class="form-label">Department</label>
                <select asp-for="DepartmentId" class="form-select" asp-items="@(new SelectList(departments, "Id", "Name"))">
                    <option value="">Select Department</option>
                </select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="PositionId" class="form-label">Position</label>
                <select asp-for="PositionId" class="form-select" asp-items="@(new SelectList(positions, "Id", "Name"))">
                    <option value="">Select Position</option>
                </select>
                <span asp-validation-for="PositionId" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="mb-3">
                <label asp-for="YearOfJoining" class="form-label">Year of Joining</label>
                <input asp-for="YearOfJoining" class="form-control" type="number" min="1900" max="@DateTime.Now.Year" />
                <span asp-validation-for="YearOfJoining" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="mb-3">
                <label asp-for="BaseSalary" class="form-label">Base Salary</label>
                <input asp-for="BaseSalary" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="BaseSalary" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="mb-3">
                <label asp-for="IsPartTime" class="form-label">Part-Time</label>
                <input asp-for="IsPartTime" class="form-check-input" type="checkbox" />
            </div>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Picture" class="form-label">Profile Picture</label>
        <input asp-for="Picture" type="file" class="form-control" accept="image/*" />
        @if (!string.IsNullOrEmpty(Model.Picture))
        {
            <img src="@Model.Picture" alt="Profile Picture" style="max-width: 100px;" />
        }
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}