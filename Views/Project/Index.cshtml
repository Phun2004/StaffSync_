@model Demo.Models.Project
@{
    ViewBag.Title = "StaffSync | Projects";
    var projects = ViewBag.Projects as List<Demo.Models.Project> ?? new List<Demo.Models.Project>();
}

<h1>Project Management</h1>

@if (TempData["Info"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Info"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Add New Project Form -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-plus-circle"></i> Add New Project</h5>
    </div>
    <div class="card-body">
        <form asp-action="Index" method="post" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger col-12"></div>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="col-md-6">
                <label asp-for="Name" class="form-label">Project Name</label>
                <input asp-for="Name" class="form-control" autofocus placeholder="Enter project name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Description" class="form-label">Description (Optional)</label>
                <input asp-for="Description" class="form-control" placeholder="Brief project description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="col-12">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create Project
                </button>
                <button type="reset" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Reset
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Existing Projects List -->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-list"></i> Existing Projects</h5>
    </div>
    <div class="card-body">
        @if (projects.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Project ID</th>
                            <th>Project Name</th>
                            <th>Description</th>
                            <th>Created Date</th>
                            <th>Team Size</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var project in projects.OrderBy(p => p.Id))
                        {
                            <tr>
                                <td>
                                    <strong>@project.Id</strong>
                                </td>
                                <td>
                                    <div class="fw-bold">@project.Name</div>
                                </td>
                                <td>
                                    <div class="text-muted">
                                        @if (!string.IsNullOrEmpty(project.Description))
                                        {
                                            @(project.Description.Length > 50 ? project.Description.Substring(0, 50) + "..." : project.Description)
                                        }
                                        else
                                        {
                                            <em>No description</em>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div>@project.CreatedDate.ToString("MMM dd, yyyy")</div>
                                    <small class="text-muted">@((DateTime.Now - project.CreatedDate).Days) days ago</small>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-info">@(project.Employees?.Count ?? 0) members</span>
                                </td>
                                <td>
                                    @if (project.Status == "Active")
                                    {
                                        <span class="badge bg-success">@project.Status</span>
                                    }
                                    else if (project.Status == "Completed")
                                    {
                                        <span class="badge bg-primary">@project.Status</span>
                                    }
                                    else if (project.Status == "On Hold")
                                    {
                                        <span class="badge bg-warning">@project.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@project.Status</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@project.Id"
                                           class="btn btn-outline-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@project.Id"
                                           class="btn btn-outline-primary" title="Edit Project">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        @if (project.Employees?.Count == 0)
                                        {
                                            <form asp-action="Delete" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@project.Id" />
                                                <button type="submit" class="btn btn-outline-danger"
                                                        title="Delete Project"
                                                        onclick="return confirm('Are you sure you want to delete project @project.Name?')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-outline-danger"
                                                    title="Cannot delete - has team members" disabled>
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Projects Summary -->
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="alert alert-info">
                        <h6><i class="fas fa-info-circle"></i> Projects Summary:</h6>
                        <div class="row">
                            <div class="col-md-3">
                                <strong>Total Projects:</strong> @projects.Count
                            </div>
                            <div class="col-md-3">
                                <strong>Active Projects:</strong> @projects.Count(p => p.Status == "Active")
                            </div>
                            <div class="col-md-3">
                                <strong>Total Team Members:</strong> @projects.Sum(p => p.Employees?.Count ?? 0)
                            </div>
                            <div class="col-md-3">
                                <strong>Average Team Size:</strong> @(projects.Any() ? Math.Round(projects.Average(p => p.Employees?.Count ?? 0), 1) : 0)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-project-diagram fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No projects found</h5>
                <p class="text-muted">Create your first project using the form above.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js"></script>
}