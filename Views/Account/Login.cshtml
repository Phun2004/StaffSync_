@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .login-container {
            max-width: 900px;
            margin: 50px auto;
        }

        .login-form {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .hero-section {
            background: linear-gradient(135deg, #007bff, #0056b3);
            color: white;
            padding: 30px;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="container login-container">
        <div class="row">
            <div class="col-md-6 hero-section">
                <h1 class="mb-3">StaffSync</h1>
                <h3>Welcome Back!</h3>
                <p>Access your StaffSync dashboard to manage or view your workforce details.</p>
                <ul class="list-unstyled">
                    <li class="mb-2">🔒 Secure Admin & Employee Access</li>
                    <li class="mb-2">📊 Real-time Dashboard</li>
                    <li class="mb-2">🛠 Complete HR Management</li>
                </ul>
                <a href="@Url.Action("Index", "Home")" class="btn btn-light mt-3">Back to Home</a>
            </div>
            <div class="col-md-6 login-form">
                <h3>StaffSync</h3>
                <h4>Login</h4>
                <p>Enter your credentials to access your dashboard</p>

                @if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @ViewBag.Error
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (TempData["Info"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["Info"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username or Phone</label>
                        <input type="text" class="form-control" id="username" name="username" placeholder="Enter username or phone number" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" required>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Sign In</button>
                    <p class="text-muted mt-3 text-center">Secure access for admins and employees</p>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>