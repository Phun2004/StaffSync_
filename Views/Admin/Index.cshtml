@model DashboardVM
@{
    var userRole = Context.Session.GetString("UserRole");
    ViewBag.Title = $"StaffSync | {userRole} Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@userRole Dashboard</h1>
    <div class="badge bg-success fs-6">Welcome, @Context.Session.GetString("Username")!</div>
</div>

<!-- Dashboard Stats Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-0">@Model.TotalEmployees</h3>
                    <p class="mb-0">Total Employees</p>
                </div>
                <i class="fas fa-users fa-2x"></i>
            </div>
            <div class="card-footer bg-primary bg-opacity-25">
                <a asp-controller="Employee" asp-action="Index" class="text-white text-decoration-none">
                    <i class="fas fa-eye me-1"></i>View Details
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-0">@Model.TotalDepartments</h3>
                    <p class="mb-0">Departments</p>
                </div>
                <i class="fas fa-building fa-2x"></i>
            </div>
            <div class="card-footer bg-success bg-opacity-25">
                <a asp-controller="Department" asp-action="Index" class="text-white text-decoration-none">
                    <i class="fas fa-eye me-1"></i>Manage Depts
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-0">@Model.ActiveProjects</h3>
                    <p class="mb-0">Active Projects</p>
                </div>
                <i class="fas fa-project-diagram fa-2x"></i>
            </div>
            <div class="card-footer bg-info bg-opacity-25">
                <a asp-controller="Project" asp-action="Index" class="text-white text-decoration-none">
                    <i class="fas fa-eye me-1"></i>View Projects
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="mb-0">@Model.TotalAdmins</h3>
                    <p class="mb-0">System Admins</p>
                </div>
                <i class="fas fa-user-shield fa-2x"></i>
            </div>
            <div class="card-footer bg-warning bg-opacity-25">
                @if (userRole == "Super Admin")
                {
                    <a asp-action="Management" class="text-white text-decoration-none">
                        <i class="fas fa-cog me-1"></i>Manage Admins
                    </a>
                }
                else
                {
                    <span class="text-white-50">Admin Level</span>
                }
            </div>
        </div>
    </div>
</div>

<!-- Main Content Row -->
<div class="row">
    <!-- Recent Employees -->
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-users me-2"></i>Recent Employees
                </h5>
                <a asp-controller="Employee" asp-action="Create" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus me-1"></i>Add Employee
                </a>
            </div>
            <div class="card-body">
                @if (Model.RecentEmployees != null && Model.RecentEmployees.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Employee</th>
                                    <th>Department</th>
                                    <th>Position</th>
                                    <th>Contact</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var employee in Model.RecentEmployees)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(employee.Picture))
                                                {
                                                    <img src="@employee.Picture" alt="Profile"
                                                         class="rounded-circle me-2"
                                                         style="width: 32px; height: 32px; object-fit: cover;" />
                                                }
                                                else
                                                {
                                                    <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center me-2"
                                                         style="width: 32px; height: 32px;">
                                                        <span class="text-white fw-bold">@employee.Name.Substring(0, 1).ToUpper()</span>
                                                    </div>
                                                }
                                                <div>
                                                    <div class="fw-bold">@employee.Name</div>
                                                    <small class="text-muted">ID: @employee.Id</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            @if (employee.Department != null)
                                            {
                                                <span class="badge bg-success">@employee.Department.Name</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Not assigned</span>
                                            }
                                        </td>
                                        <td>
                                            @if (employee.Position != null)
                                            {
                                                @employee.Position.Name
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not assigned</span>
                                            }
                                        </td>
                                        <td>@employee.Phone</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id"
                                                   class="btn btn-outline-primary btn-sm" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-controller="Employee" asp-action="Attendance" asp-route-id="@employee.Id"
                                                   class="btn btn-outline-info btn-sm" title="Attendance">
                                                    <i class="fas fa-calendar-check"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-users fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No employees found</p>
                        <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>Add First Employee
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Admin Actions Sidebar -->
    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-tools me-2"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-user-plus me-2"></i>Add New Employee
                    </a>
                    <a asp-controller="Department" asp-action="Create" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Create Department
                    </a>
                    <a asp-controller="Project" asp-action="Create" class="btn btn-info">
                        <i class="fas fa-briefcase me-2"></i>Start New Project
                    </a>
                    <a asp-controller="Attendance" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-clock me-2"></i>View Attendance
                    </a>
                    @if (userRole == "Super Admin")
                    {
                        <hr class="my-2">
                        <a asp-action="Management" class="btn btn-warning">
                            <i class="fas fa-users-cog me-2"></i>Manage Admins
                        </a>
                    }
                </div>
            </div>
        </div>

        <!-- Admin Profile Card -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-user me-2"></i>My Profile
                </h5>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3"
                         style="width: 64px; height: 64px;">
                        <i class="fas fa-user-tie fa-2x text-white"></i>
                    </div>
                    <h6 class="fw-bold">@Context.Session.GetString("Username")</h6>
                    <p class="text-muted mb-3">@userRole</p>
                    <a asp-action="Profile" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-edit me-1"></i>Edit Profile
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh dashboard every 30 seconds
        setTimeout(function() {
            location.reload();
        }, 30000);
    </script>
}